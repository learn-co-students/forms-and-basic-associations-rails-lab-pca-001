<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <%= f.label :notes %>
  <% 2.times do |i|%>
  <%= text_field_tag "song[notes][]", nil, id: "song_notes_#{i+1}" %>
  <% end %>

  <br />

  <%= f.submit %>
<% end %>
